{
  "listeners": {
    "*:80": {
      "pass": "routes"
    }
  },
  "routes": [
    {
      "match": {
        "host": "symfony7site.local"
      },
      "action": {
        "pass": "applications/symfony/index"
      }
    },
    {
      "match": {
        "host": "localhost"
      },
      "action": {
        "pass": "applications/symfony/index"
      }
    }
  ],
  "applications": {
    "symfony": {
      "type": "php",
      "processes": {
        "spare": 1,
        "idle_timeout": 20
      },
      "targets": {
        "direct": {
          "root": "/var/www/symfony/public/"
        },
        "index": {
          "root": "/var/www/symfony/public/",
          "script": "index.php"
        }
      },
      "options": {
        "file": "/usr/local/etc/php/php.ini",
        "admin": {
          "memory_limit": "128M",
          "variables_order": "EGPCS",
          "expose_php": "off",
          "short_open_tag": "off",
          "allow_url_fopen": "off"
        }
      }
    }
  },
  "settings": {
    "http": {
      "server_version": false
    }
  }
}